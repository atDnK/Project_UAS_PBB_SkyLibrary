<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kotak_atas"
        android:fontFamily="@font/lobster"
        android:paddingLeft="24dp"
        android:paddingTop="64dp"
        android:paddingRight="24dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="ABOUT US"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_about">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/lobster"
            android:text="My Library merupakan aplikasi peminjaman buku perpustakaan yang dapat diakses dimanapun dan kapanpun, hanya dengan menggunakan aplikasi ini anda tidak perlu mengantri atau harus berada di perpustakaan anda dapat meminjam buku ini di manapun kalian berada"
            android:textAlignment="center"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lobster"
            android:text="Developer"
            android:textAlignment="center"
            android:textSize="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutNauval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_blue2"
            android:text="Nauval Dwi Primadya"
            android:onClick="clickNauval"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutDinita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_blue2"
            android:text="Dinita Kusumasari"
            android:textColor="@color/white"
            android:onClick="clickDinita"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutLeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_blue2"
            android:text="Leno Dwi Cahya"
            android:onClick="clickLeno"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutNurul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_blue2"
            android:text="Nurul Ismawati"
            android:onClick="clickNurul"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>