<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".AboutNauval">

    <TextView
        android:id="@+id/txt_about"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kotak_atas"
        android:fontFamily="@font/lobster"
        android:paddingLeft="24dp"
        android:paddingTop="64dp"
        android:paddingRight="24dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Nauval Dwi Primadya"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_about">

        <ImageView
            android:layout_width="138dp"
            android:layout_height="160dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/profil"
            android:src="@drawable/a11_2020_13037" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lobster"
            android:textColor="@color/black"
            android:text="Halo nama saya Nauval Dwi Primadya, Saya adalah mahasiswa Universitas Dian Nuswantoro, dengan NIM A11.2020.13037. Dalam project ini saya turut andil dalam mendesain aplikasi ini."
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nauval"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/lobster"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black_overlay"
            android:text="@string/nauval"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>