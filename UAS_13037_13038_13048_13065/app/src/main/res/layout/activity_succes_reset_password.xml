<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_frame23"
    android:gravity="center"
    tools:context=".SuccesResetPassword">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="286dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_logo6" />

    <TextView
        android:id="@+id/txt_sukses"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineHeight="30dp"
        android:text="Sucessfull!!!"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_sukses"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sukses"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineHeight="30dp"
        android:text="You Have Successfull Change Password.
        Please Use New Password When Loggin In"
        android:textAlignment="center"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="142dp"
        android:layout_height="43dp"
        android:layout_below="@+id/login_sukses"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/btn_blue"
        android:onClick="clickNext"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


</RelativeLayout>